{{#state}}
	<div class="list-group-item">
		<br/>
		<div class="row">
			<div class="col-md-offset-5 col-md-1 col-xs-offset-4 col-xs-2 col-sm-2">
				<span class="fa fa-4x fa-trophy"></span>
			</div>
			<div class="col-md-1 col-xs-2 col-sm-2">
				{{profileImageOfSize player 50}}
			</div>
			<div class="col-md-12 col-xs-12 col-sm-12">
				<h4><span class="fa fa-trophy"></span> {{goal}}</h4>
				<p class="list-group-item-text">
					{{status}}
				</p>
				{{#if supporters}}
					{{template "supporters"}}
				{{/if}}
			</div>
		</div>
		<div class="row">
			<br/>
		</div>
	</div>
{{/state}}

