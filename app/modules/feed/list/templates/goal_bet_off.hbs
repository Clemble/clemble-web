<hr/>
<div class="container-fluid">
	<div class="col-md-12 row">
		<div class="col-md-4">
			Win/<small>Bank</small>: {{myBet.interest.amount}} / <small>{{bank.total.interest.amount}}</small>
		</div>
		{{#each context.playerContexts}}
			<div class="col-md-4">
				Update: <span class="label label-success label-lg">{{formatDate clock.breachTime "%d/%m %H:%M"}}</span>
			</div>
			<div class="col-md-4">
				Deadline: <span class="label label-warning">{{formatDate clock.deadline "%d/%m %H:%M"}}</span>
			</div>
		{{/each}}
	</div>
	<div class="col-md-2">
		<small>Bets Off</small>
		<div>
			{{smallProfileImage player}}
		</div>
		<h4><label class="label label-success">{{formatDate startDate "%d/%m"}}</label></h4>
	</div>
	<div class="col-md-10">
		<h4>{{goal}}</h4>
		{{socialShare}}
	</div>
	{{template "supporters"}}
</div>

