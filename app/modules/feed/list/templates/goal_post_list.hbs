{{#state}}
	<div class="list-group-item">
		<br/>
		<div class="row-picture">
			{{profileImageOfSize player 40}}
			{{#each context.playerContexts}}
				<span class="label label-success"><b>Ends</b> {{formatDate clock.deadline "%d/%m"}}</span>
			{{/each}}
		</div>
		<div class="row-content">
			<div class="col-md-3">
				{{#if myBet}}<b>My:</b> <span class="label label-success">{{myBet.interest.amount}}</span>{{/if}}
				<b>Bank:</b> <span class="label label-success">{{bank.total.interest.amount}}</span><br/>
				<b>Penalty:</b> <span class="label label-danger">{{bank.penalty.amount}}</span><br/>
				{{#if myBet}}{{else}}{{#is phase "started"}}<button id="bet" type="button" class="btn btn-primary"><span class="fa fa-circle-o"/> Bet</button>{{/is}}{{/if}}
			</div>
			<div class="col-md-9">
				<h4 class="list-group-item-heading"><span class="fa fa-trophy"></span> {{goal}}</h4>
				<p class="list-group-item-text">
					{{#is lastAction.type "timeout:punishment:action"}}<span class="label label-danger">Missed update</span>{{/is}}
					{{status}}
				</p>
				<div class="row">
					<div class="col-md-12">
						{{#if supporters}}
							{{template "supporters"}}
						{{/if}}
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-12 row">
		</div>
	</div>
{{/state}}