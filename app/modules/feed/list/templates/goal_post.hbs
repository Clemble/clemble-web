{{#state}}
<div class="col-md-12">
	<div class="col-md-1 col-xs-2">
		{{profileImageOfSize player 40}}
	</div>
	<div class="col-md-6 col-xs-10">
		<h4>Bank: {{bank.total.interest.amount}} / {{#if myBet}}my: {{myBet.interest.amount}}{{else}}{{#is phase "started"}}<a id="bet" >bet</a>{{/is}}{{#is phase "betOff"}}Bets are Off{{/is}}{{#is phase "finished"}}finish{{/is}}{{/if}}</h4>
		<div class="hidden-md hidden-lg">
			{{#each context.playerContexts}}
				<span class="label label-success">{{formatDate clock.breachTime "%d/%m"}}</span>
				<span class="label label-warning">{{formatDate clock.deadline "%d/%m"}}</span>
			{{/each}}
		</div>
	</div>
	<div class="hidden-xs hidden-sm">
	{{#each context.playerContexts}}
		<div class="col-md-5">
			<span class="label label-warning pull-right">Deadline: {{formatDate clock.deadline "%d/%m"}}</span> <span class="label label-success label-lg pull-right">Update: {{formatDate clock.breachTime "%d/%m"}}</span>
		</div>
	{{/each}}
	</div>
</div>
<div class="col-md-12 col-xs-12">
	<div class="col-md-12">
		<h4><span class="fa fa-trophy"></span> {{goal}}</h4>
		<h5>{{status}}</h5>
	</div>
</div>
<div class="col-md-12 col-xs-12">
	<div class="col-md-12">
		{{#if supporters}}
			{{template "supporters"}}
		{{/if}}
	</div>
</div>
{{/state}}
 <div class="list-group-separator"></div>

