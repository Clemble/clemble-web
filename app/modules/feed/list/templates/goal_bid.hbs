<hr/>
<div class="container-fluid">
	<div class="col-md-2">
		{{smallProfileImage playerBid.player}}
		<h4><label class="label label-warning">Bid</label></h4>
	</div>
	<div class="col-md-2">
		{{smallProfileImage player}}
		<h4><label class="label label-success">{{formatDate startDate "%d/%m"}}</label></h4>
	</div>
	<div class="col-md-8">
		<h5>Bid</h5>
		<h4><small>{{formatDate deadline "%d/%m"}}</small> {{goal}}</h4>
		{{bid playerBid.bid}} Total: {{bid bank.total}}
	</div>
	{{#unless my}}
		<div class="col-md-12">
			<div class="col-md-3">
				<span id="observe" class="fa fa-eye text-muted"> Observe</span>
			</div>
			<div class="col-md-3">
				<span id="support" class="fa fa-support text-muted"> Support</span>
			</div>
		</div>
	{{/unless}}
</div>

