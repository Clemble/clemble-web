<div ng-app="navigation" ng-controller="SideNavigationContoller">
	<md-sidenav md-component-id="left" class="md-sidenav-left">
		<md-toolbar class="md-theme-light" hd-large>
			 <h1 class="md-toolbar-tools">Menu</h1>
		</md-toolbar>
		<md-content layout-padding>
			<md-list>
				<md-list-item ng-click="goTo('/goal')">
					<p>
						<md-icon class="material-icons">home</md-icon>
						Home
					</p>
				</md-list-item>
				<md-list-item ng-click="goTo('/victory')">
					<p>
						<md-icon class="material-icons">history</md-icon>
						History
					</p>
				</md-list-item>
				<md-list-item ng-click="goTo('/notification')">
					<p>
						<md-icon class="material-icons">notifications</md-icon>
						Notifications
					</p>
				</md-list-item>
				<md-list-item ng-click="goTo('/settings')">
					<p>
						<md-icon class="material-icons">settings</md-icon>
						Settings
					</p>
				</md-list-item>
				<md-divider ></md-divider>
				<md-list-item ng-click="goTo('/signout')">
					<p>
						<md-icon class="material-icons">exit_to_app</md-icon>
						Sign Out
					</p>
				</md-list-item>
			</md-list>
		</md-content>
	</md-sidenav>
	<md-content>
		<md-toolbar layout="row">
			<div class="md-toolbar-tools">
				<md-button class="md-icon-button" aria-label="Settings" ng-click="openLeftMenu()" hide-md>
					<md-icon class="material-icons">menu</md-icon>
				</md-button>
				<div hide-sm>

				<md-button class="md-icon-button" aria-label="Settings" ng-click="goTo('/goal')">
					<md-icon class="material-icons">home</md-icon>
				</md-button>
				<md-button class="md-icon-button" aria-label="Settings" ng-click="goTo('/victory')">
					<md-icon class="material-icons">history</md-icon>
				</md-button>
				<md-button class="md-icon-button" aria-label="Settings" ng-click="goTo('/notification')">
					<md-icon class="material-icons">notifications</md-icon>
				</md-button>
				<md-button class="md-icon-button" aria-label="Settings" ng-click="goTo('/settings')">
					<md-icon class="material-icons">settings</md-icon>
				</md-button>
				<!-- fill up the space between left and right area -->
				</div>
				<span flex></span>
				<cl-account player="my"></cl-account>
				<md-button class="md-icon-button" aria-label="Settings" ng-click="toggleRight()">
					<md-icon class="material-icons">face</md-icon>
				</md-button>
			</div>
		</md-toolbar>
	</md-content>
	<md-sidenav class="md-sidenav-right" md-component-id="right">
		<md-toolbar class="md-theme-light">
			<h1 class="md-toolbar-tools">Connections</h1>
		</md-toolbar>
		<md-content layout-padding>
			<cl-search-player></cl-search-player>
		</md-content>
	</md-sidenav>
</div>
