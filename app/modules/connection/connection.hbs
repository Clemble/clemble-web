 <md-content>
    <md-list>
      <md-subheader class="md-no-sticky">3 line item</md-subheader>
      <md-list-item class="md-3-line" ng-repeat="item in todos">
        <img ng-src="{{item.face}}?{{$index}}" class="md-avatar" alt="{{item.who}}" />
        <div class="md-list-item-text">
          <h3>{{ item.who }}</h3>
          <h4>{{ item.what }}</h4>
          <p>{{ item.notes }}</p>
        </div>
      </md-list-item>
      <md-divider ></md-divider>
      <md-subheader class="md-no-sticky">2 line item</md-subheader>
      <md-list-item class="md-2-line">
      <img ng-src="{{todos.face}}?20" class="md-avatar" alt="{{todos.who}}" />
        <div class="md-list-item-text">
          <h3>{{ todos.who }}</h3>
          <p>Secondary text</p>
        </div>
      </md-list-item>
	 </md-list>
</md-content>
