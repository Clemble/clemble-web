<div class="col-md-offset-3 col-md-6">
	<div id="socialConnectApp"></div>
	<div id="tagApp"></div>
	<div id="passwordApp" ng-app="settings.password">
		<div class="thumbnail">
			<h4>Password</h4>
			<form name="passwordForm" ng-controller="SettingsPasswordController as password" novalidate>
				<md-input-container>
					<label>Old Password</label>
					<input name="oldPassword" type="password" ng-model="password.m.oldPassword">
				</md-input-container>
				<md-input-container>
					<label>New Password</label>
					<input name="newPassword" type="password" ng-model="password.m.password" required>
					<div ng-messages="passwordForm.newPassword.$error">
						<span ng-message="required" class="error">Specify new password</span>
					</div>
				</md-input-container>
				<md-input-container>
					<label>Repeat New Password</label>
					<input class="form-control"
						name="newPasswordRepeat"
						ng-model="password.newPasswordRepeat"

						required
						type="password">
					<div ng-messages="passwordForm.newPasswordRepeat.$error">
						<span ng-message="required">Repeat password please</span>
						<span ng-message="match">Do not match</span>
					</div>
				</md-input-container>
				<button class="btn btn-lg" ng-click="password.changePassword()">\{{password.saveButton}}</button>
			</form>
		</div>
	</div>
</div>