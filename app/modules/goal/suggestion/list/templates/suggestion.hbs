<div class="list-group-item">
	<br/>
	<div class="row-picture">
		{{profileImageOfSize suggester 40}}
	</div>
	<div class="row-content">
		<h4 class="list-group-item-heading"><span class="fa fa-trophy"></span> {{goal}}</h4>
		{{#if supporters}}
			{{template "supporters"}}
		{{/if}}
		<div class="btn-group-flat hidden-xs hidden-sm">
			<button class="btn btn-success" id="accept"><span class="fa fa-check-square-o"></span> Yes</button>
			<button class="btn btn-info" id="decline"><span class="fa fa-square-o"></span> No</button>
		</div>
		<div class="btn-group-flat hidden-lg hidden-md">
			<button class="btn btn-success" id="accept"><span class="fa fa-check-square-o"></span></button>
			<button class="btn btn-info" id="decline"><span class="fa fa-square-o"></span></button>
		</div>
	</div>
</div>