<hr/>
<div class="container-fluid">
	<div class="col-md-12">
		<h4>{{goal}}</h4>
	</div>
	<div class="col-md-2">
		{{#each context.playerContexts}}
			<h4><span class="label label-success label-lg">{{formatDate clock.breachTime "%d/%m"}}</span></h4>
			<h4><span class="label label-warning">{{formatDate clock.deadline "%d/%m"}}</span></h4>
		{{/each}}
	</div>
	<div class="col-md-10">
		<div class="col-md-12">
			My: {{bid myBid}} <small>Total: {{bid bank.total}}</small><br/>
			<small>Status</small><br/>
			{{status}}<br/>
			<button id="update" class="btn btn-xs btn-success"><span class="fa fa-circle-thin"></span> Update</button>
		</div>
	</div>
	<div class="col-md-12">
		{{#each supporters}}{{microProfileImage this}}{{/each}}
		{{#each observers}}{{microProfileImage this}}{{/each}}
	</div>
</div>
