<div class="list-group-item list-group-item-success">
	<br/>
	<div class="row-picture">
		{{profileImageOfSize player 40}}
		{{#each context.playerContexts}}
			<span class="label label-success"><b>Next</b> {{formatDate clock.breachTime "%d/%m"}}</span><br/>
			<span class="label label-success"><b>Ends</b> {{formatDate clock.deadline "%d/%m"}}</span>
		{{/each}}
	</div>
	<div class="row-content">
		<div class="col-md-3">
			<span class="label">{{phase}}</span><br/>
			<b>My:</b> <span class="label label-success">{{myBet.interest.amount}}</span><br/>
			<b>Total:</b> <span class="label label-success">{{bank.total.interest.amount}}</span><br/>
			<b>Penalty:</b> <span class="label label-danger">{{bank.penalty.amount}}</span>
		</div>
		<div class="col-md-9">
			<h5 class="list-group-item-heading"><small><span class="fa fa-trophy"></span> {{goal}}</small></h5>
			<p class="list-group-item-text">
				<h4>{{status}}</h4>
			</p>
			{{#if supporters}}
				{{template "supporters"}}
			{{/if}}
		</div>
	</div>
	<div class="row">
		<div class="btn-group-flat">
			<button id="update" class="btn btn-material-blue-500"><span class="fa fa-circle-thin"></span> Update</button>
			<button id="reached" class="btn btn-success"><span class="fa fa-check-circle-o"></span> I Won</button>
			<button id="surrender" class="btn btn-danger"><span class="fa fa-remove"></span> I Lost</button>
		</div>
		<br/>
	</div>
</div>
